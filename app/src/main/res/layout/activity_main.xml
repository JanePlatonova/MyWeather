<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="400dp"
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Погода Киев"

        android:textSize="30sp"></EditText>

    <Button
        android:id="@+id/forecast_btn"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_below="@id/city_name"
        android:layout_centerHorizontal="true"
        android:text="Прогноз на неделю"></Button>
    <Button
        android:id="@+id/weather_btn"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_below="@id/forecast_btn"
        android:layout_centerHorizontal="true"
        android:text="Погода сегодня"></Button>

    <TextView
        android:id="@+id/tempreture_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_below="@id/weather_btn"
        android:text="tempreture"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tempreture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_btn"
        android:layout_centerHorizontal="true"
        android:text="+18"
        android:textColor="#FFFFFF"
        android:textSize="30sp"></TextView>


    <TextView
        android:id="@+id/temp_max_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempreture_t"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:text="temp max"
        android:textColor="#FFFFFF"
        android:textSize="22sp"></TextView>

    <TextView
        android:id="@+id/temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempreture"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="+18"
        android:textColor="#FFFFFF"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/temp_min_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_max_t"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:text="temp min"
        android:textColor="#FFFFFF"
        android:textSize="22sp"></TextView>

    <TextView
        android:id="@+id/temp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_max"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="+18"
        android:textColor="#FFFFFF"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/pressure_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_min_t"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:textColor="#FFFFFF"
        android:text="pressure"
        android:textSize="22sp"></TextView>

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_min"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="755"
        android:textColor="#FFFFFF"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/wind_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pressure_t"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:text="wind"
        android:textColor="#FFFFFF"
        android:textSize="22sp"></TextView>

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pressure"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="30sp"></TextView>


</RelativeLayout>
